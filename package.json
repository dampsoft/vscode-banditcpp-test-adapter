{
  "name": "vscode-banditcpp-test-adapter",
  "displayName": "Bandit Test Explorer",
  "description": "Run your Bandit tests in the Sidebar of Visual Studio Code",
  "icon": "img/testexplorer-banditcpp.png",
  "author": "Matthias FÃ¼g <matthias.fueg@dampsoft.de>",
  "publisher": "mf",
  "version": "0.6.1",
  "license": "MIT",
  "homepage": "https://github.com/hbenl/vscode-example-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/hbenl/vscode-example-test-adapter.git"
  },
  "bugs": {
    "email": "matthias.fueg@dampsoft.de"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "test",
    "testing",
    "unit test",
    "bandit",
    "c++"
  ],
  "main": "out/main.js",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf out *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "entities": "^1.1.1",
    "fs-extra": "^7.0.1",
    "performance-now": "^2.1.0",
    "tslib": "^1.9.3",
    "vscode-test-adapter-api": "^1.0.1",
    "vscode-test-adapter-util": "^0.5.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/entities": "^1.1.0",
    "@types/xml-parser": "^1.2.29",
    "@types/xml2js": "^0.4.2",
    "typescript": "^3.0.3",
    "vsce": "^1.47.0",
    "vscode": "^1.1.21"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Bandit Test Explorer configuration",
      "properties": {
        "banditTestExplorer.testsuites": {
          "description": "The configuration of your bandit tests. Either a configuration object or a path to the JSON configuration file. (relative to the workspace folder or absolute path).",
          "type": [
            "string",
            "array",
            "object"
          ],
          "scope": "resource"
        },
        "banditTestExplorer.parallelProcessLimit": {
          "description": "The limit of parallel processes startet during a test run.",
          "type": "integer",
          "scope": "resource",
          "default": 1
        },
        "banditTestExplorer.watchTimeoutSec": {
          "description": "Can help to prevent autorun when watched files are compiled frequently.",
          "type": "number",
          "default": 10,
          "scope": "resource"
        },
        "banditTestExplorer.allowKillProcess": {
          "description": "Allows to hard kill running processes when a testrun is cancelled or aborted.",
          "type": "boolean",
          "scope": "resource"
        },
        "banditTestExplorer.logpanel": {
          "description": "Enables the output of diagnostic logs to the integrated output panel.",
          "type": "boolean",
          "scope": "resource"
        },
        "banditTestExplorer.logfile": {
          "description": "Write diagnostic logs to the given file.",
          "type": "string",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "title": "Starte Test",
        "command": "bandit-test-explorer.run",
        "category": "Bandit Test Explorer"
      }
    ]
  }
}